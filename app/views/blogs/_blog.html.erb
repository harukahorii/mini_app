<div class="row">
      <div class="col s6 offset-s3">
        <div class="card #80d8ff light-blue accent-1">
          <div class="card-content white-text">
              <span class="card-title"><%= blog.user.nickname %></span>
              <p><%= simple_format(blog.text) %></p>
          </div>
          <% if user_signed_in? && current_user.id == blog.user_id %>
            <div class="card-action">
              <%= link_to 'DELETE', "/blogs/#{blog.id}", method: :delete %>
              <%= link_to 'EDIT', "/blogs/#{blog.id}/edit", method: :get %>
            </div>
          <% end %>
        </div>
      </div>
    </div>